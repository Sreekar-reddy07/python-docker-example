# Stage 1: Creating a foundation image
FROM ubuntu AS ubun

WORKDIR /app

# Copy application files
COPY requirements.txt /app/
COPY devops /app/

# Install dependencies
RUN apt-get update && apt-get install -y python3 python3-pip python3-venv

# Create and set up virtual environment
RUN python3 -m venv venv1 && \
    /app/venv1/bin/pip install --no-cache-dir -r requirements.txt

EXPOSE 8000

# Stage 2: Creating a Distroless Python Image
FROM gcr.io/distroless/python3

WORKDIR /app

# Copy everything from the first stage
COPY --from=ubun /app /app

# Set the correct CMD without using `source`
CMD ["/app/venv1/bin/python3", "manage.py", "runserver", "0.0.0.0:8000"]

